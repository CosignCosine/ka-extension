{
    "manifest_version": 2,
    "name": "The Khan Academy Extension",
    "short_name": "The KA Extension",
    "version": "2.0.1",
    "description": "The Khan Academy Extension. Created by Luke Krikorian & Jett Burns.",
    "browser_action": {
        "name": "Khan Academy Extension",
        "icons": ["/icon48.png", "/icon128.png"],
        "default_icon": "/icon128.png"
    },
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["*://*.khanacademy.org/*"],
        "run_at" : "document_end"
    }],
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        "tabs",
        "inject/src.js"
    ]
}
